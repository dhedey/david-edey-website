---
import BaseLayout, { type Props as BaseLayoutProps } from './BaseLayout.astro';
import Prose from '@/components/Prose.astro';

interface Props {
    title: string;
    headTitle?: string;
    metaDescription?: string;
    isArticle?: boolean;
}
const props: Props = Astro.props;
const { title } = props;
const headTitle = props.headTitle || props.title;
const ContainerElement = props.isArticle ? 'article' : 'div';

---
<BaseLayout headTitle={headTitle} metaDescription={props.metaDescription}>
    <ContainerElement class="bg-white rounded-lg shadow p-4 sm:p-8 w-full max-w-2xl md:max-w-3xl lg:max-w-4xl xl:max-w-5xl mx-2 sm:mx-0">
        <h1 class="text-3xl font-bold mb-4">{title}</h1>
        <slot name="beforeProse" />
        <Prose>
            <slot />
        </Prose>
      </ContainerElement>
</BaseLayout>
